@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var el = document.getElementById('servicesCarousel');
            if (el && window.bootstrap && bootstrap.Carousel) {
                new bootstrap.Carousel(el, { interval: 0, ride: false, wrap: true }););
            }
        });
    </script>
}
