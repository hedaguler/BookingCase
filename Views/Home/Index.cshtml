@model BookingCase.Models.ViewModels.SearchFormViewModel

<!-- HERO + Arama -->
<section class="hero-section set-bg"
         style="background-image:url('@Url.Content("~/sona/img/hero/hero-1.jpg")')"
         data-setbg="@Url.Content("~/sona/img/hero/hero-1.jpg")">
    <div class="container">
        <div class="row">
            <!-- Sol: başlık -->
            <div class="col-lg-6">
                <div class="hero-text">
                    <span>Find your room</span>
                    <h1>Arama Formu</h1>
                    <p>Şehri ve tarihleri gir, uygun otelleri listeleyelim.</p>
                </div>
            </div>

            <!-- Sağ: Sona booking formu -->
            <div class="col-lg-4 offset-lg-2">
                <div class="booking-form">
                    <h3>Arama Formu</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control" placeholder="ad soyad" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şehir</label>
                            <input asp-for="City" class="form-control" />
                        </div>

                        <div class="check-date">
                            <label>Check-in</label>
                            <input asp-for="CheckIn" type="date" />
                            <i class="icon_calendar"></i>
                        </div>

                        <div class="check-date">
                            <label>Check-out</label>
                            <input asp-for="CheckOut" type="date" />
                            <i class="icon_calendar"></i>
                        </div>

                        <div class="row">
                            <div class="col-6 select-option">
                                <label>Yetişkin</label>
                                <select asp-for="Adults" class="form-select">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-6 select-option">
                                <label>Oda</label>
                                <select asp-for="Rooms" class="form-select">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="select-option">
                            <label>Para Birimi</label>
                            <select asp-for="Currency" class="form-select">
                                <option>USD</option>
                                <option>TRY</option>
                            </select>
                        </div>

                        <button class="primary-btn" type="submit">Müsait Otelleri Göster</button>
                    </form>
                </div><!-- .booking-form -->
            </div><!-- .col -->
        </div><!-- .row -->
    </div><!-- .container -->
</section><!-- /HERO -->
<!-- ABOUT US -->
<section class="aboutus-page-section spad-2">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <div class="section-title text-start">
                    <span>About us</span>
                    <h2>Intercontinental LA<br />Westlake Hotel</h2>
                </div>
                <p>
                    Sona.com seyahat konaklama alanında ilham veren bir sitedir. Her gün,
                    90+ yerel web sitesi ve 41 dilde milyonlarca gezgine ulaşıyoruz.
                    Mükemmel oteli, tatil köyünü, daireyi ya da bungalovu bulmana yardım ediyoruz.
                </p>
                <a href="#" class="primary-btn">Read More</a>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6">
                        <img src="~/sona/img/room/room-1.jpg" class="img-fluid rounded-2" alt="About 1" />
                    </div>
                    <div class="col-6">
                        <img src="~/sona/img/room/room-2.jpg" class="img-fluid rounded-2" alt="About 2" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- WHAT WE DO (Bootstrap Carousel) -->
@* WHAT WE DO (Carousel) *@
