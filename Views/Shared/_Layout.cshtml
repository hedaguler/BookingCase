@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookingCase</title>

    <!-- Sona CSS -->
    <!-- Sona icon fonts -->
    <link rel="stylesheet" href="~/sona/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/sona/css/elegant-icons.css" />

    <link rel="stylesheet" href="~/sona/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/sona/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/sona/css/elegant-icons.css" />
    <link rel="stylesheet" href="~/sona/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/sona/css/nice-select.css" />
    <link rel="stylesheet" href="~/sona/css/style.css" />

    <style>
  /* Sona menü fix */
  .menu-item .nav-menu .mainmenu{list-style:none;margin:0;padding:0}
  .menu-item .nav-menu .mainmenu>li{list-style:none;display:inline-block;margin-right:42px}
  .menu-item .nav-menu .mainmenu>li>a{
      display:inline-block;padding:27px 0;color:#19191a;text-decoration:none
  }
  .menu-item .nav-menu .mainmenu>li>a:after{
      position:absolute;left:0;top:52px;width:100%;height:2px;background:#dfa974;content:"";opacity:0;transition:all .3s
  }
  .menu-item .nav-menu .mainmenu>li:hover>a:after,
  .menu-item .nav-menu .mainmenu>li.active>a:after{opacity:1}
</style>


</head>
<body>

    <!-- Header -->
    <header class="header-section header-normal">
        <!-- Üst bar -->
        <div class="top-nav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="tn-left">
                            <li><i class="fa fa-phone"></i> (021) 345 67890</li>
                            <li><i class="fa fa-envelope"></i> info@hotelcase.com</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="tn-right">
                            <a class="bk-btn" asp-controller="Home" asp-action="Index">BOOKING NOW</a>
                            <div class="language-option">
                                <img src="~/sona/img/flag.jpg" alt="">
                                <span>EN</span>
                                <div class="flag-dropdown">
                                    <ul>
                                        <li><a href="#">TR</a></li>
                                        <li><a href="#">EN</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menü -->
        <div class="menu-item">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                                <span class="h4 m-0">Sona.</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="nav-menu">
                            <ul class="mainmenu">
                                <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a href="#search">Rooms</a></li>
                                <li><a asp-controller="Home" asp-action="Privacy">About</a></li>
                                <li><a href="#contact">Contact</a></li>
                            </ul>
                            <div class="nav-right">
                                <span class="icon_search search-switch"></span>
                            </div>
                        </div>
                        <div class="canvas-open"><i class="icon_menu"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    @RenderBody()

    <!-- Footer -->
    <footer class="footer-section">
        <div class="container">
            <div class="footer-text">
                <div class="row">
                    <!-- About / Social -->
                    <div class="col-lg-4 col-md-6">
                        <div class="ft-about">
                            <div class="logo">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold">Sona.</a>
                            </div>
                            <p>We inspire and reach millions of travelers across the world.</p>
                            <div class="fa-social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                            </div>
                        </div>
                    </div>

                    <!-- Contact -->
                    <div class="col-lg-3 col-md-6">
                        <div class="ft-contact">
                            <h6>Contact</h6>
                            <ul>
                                <li>(12) 345 67890</li>
                                <li>info@hotelcase.com</li>
                                <li>286 Cordia Extension Apt. 356, Lake, United State</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Newsletter -->
                    <div class="col-lg-5 col-md-12">
                        <div class="ft-newslatter">
                            <h6>New Latest</h6>
                            <p>Get the latest updates and offers.</p>
                            <form class="fn-form" onsubmit="return false;">
                                <input type="email" placeholder="Email" />
                                <button type="button">Subscribe</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="copyright-option">
                <div class="row">
                    <div class="col-lg-7">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            <li><a href="#">Terms of use</a></li>
                            <li><a href="#">Environmental Policy</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-5">
                        <div class="co-text text-end">
                            © @DateTime.UtcNow.Year BookingCase
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- Sona JS -->

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <script src="~/sona/js/jquery-3.3.1.min.js"></script>
    <script src="~/sona/js/bootstrap.min.js"></script>
    <script src="~/sona/js/jquery.nice-select.min.js"></script>
    <script src="~/sona/js/owl.carousel.min.js"></script>
    <script src="~/sona/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

